{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types"]
  },
  "include": ["./index.ts", "./tailwind.config.ts", "index.d.ts"]
}
